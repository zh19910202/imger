{
  "manifest_version": 3,
  "name": "图片快捷下载器",
  "version": "1.0",
  "description": "快捷下载图片，保留原有格式和尺寸，下载完成后自动打开",
  "permissions": [
    "downloads",
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "图片快捷下载器"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
